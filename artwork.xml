<?xml version="1.0" encoding="UTF-8"?>
<!-- This is the default 'artwork.xml' file that ONLY exports a simple screenshot composited from the cover and screenshot artwork. Please check 'artwork.xml.example' for a more thorough example of the possibilites. Also be sure to check the full artwork documentation at https://github.com/muldjord/skyscraper/blob/master/ARTWORK.md -->
<artwork>
  <output type="screenshot" width="640" height="400">
    <layer resource="cover" valign="bottom" y="-15" height="200">
      <shadow distance="10" softness="10" opacity="75"/>
    </layer>
    <layer resource="screenshot" align="right" valign="top" width="520" height="390"/>
  </output>
  <output type="wheel" width="350"/>
</artwork>
